---
const base = import.meta.env.BASE_URL ?? '/';
const trimmedBase = base === '/' ? '' : base.replace(/\/$/, '');
const toolsUrl = `${trimmedBase}/tools`;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="refresh" content={`0;url=${toolsUrl}`} />
    <title>Bookmarklet Exporter</title>
  </head>
  <body>
    <p>Redirecting to <a href={toolsUrl}>ツールページ</a>...</p>
  </body>
</html>
